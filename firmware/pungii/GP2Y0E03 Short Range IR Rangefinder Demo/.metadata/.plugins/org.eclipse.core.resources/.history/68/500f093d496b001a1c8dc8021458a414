#include <msp430.h> 
#include "delay.h"
#include "lcd.h"
#include "lcd_print.h"


void setup(void);



void main(void)
{
    setup();

    while(1)
    {

    };
}


void setup(void)
{
    WDTCTL = WDTPW | WDTHOLD;

    BCSCTL2 = SELM_2 | DIVM_0 | SELS | DIVS_0;

    if (CALBC1_8MHZ != 0xFF)
    {
        __delay_cycles(100000);
        DCOCTL = 0x00;
        BCSCTL1 = CALBC1_8MHZ;
        DCOCTL = CALDCO_8MHZ;
    }

    BCSCTL1 |= DIVA_0;

    BCSCTL1 &= ~XT2OFF;

    BCSCTL3 = XT2S_2 | LFXT1S_0 | XCAP_1;

    LCD_init();
    LCD_clear_home();
}
